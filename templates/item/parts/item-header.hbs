<header class="sheet-header flexrow">
	<img class="profile" src="{{item.img}}" title="{{item.name}}" data-edit="img"/>

	<div class="header-details {{#if (or (eq item.type "jutsu") (eq item.type "arma"))}}flexcol{{else}}flexrow{{/if}}">
		<h1 class="charname" style="margin: 0;">
			<input name="name" type="text" value="{{item.name}}" placeholder="Nome"/>
		</h1>
		{{#if (or (eq item.type "jutsu") (eq item.type "arma"))}}
		<footer>
			{{#if (eq item.type "jutsu")}}<label style="font-size: 11px;margin-left: 10px;">{{data.tipo}} {{data.circulo}} ({{data.escola}})</label>{{/if}}
			{{#if (eq item.type "arma")}}<label style="font-size: 11px;margin-left: 10px;">
				{{lookup config.tipoArma data.tipoArma }} — 
				{{#if (or data.propriedades.arremesso data.propriedades.disparo)}}Ataque à Distância ({{data.alcance}})
				{{else}}Corpo a Corpo
				{{/if}} — 
				{{#if data.propriedades.duasMaos}}Duas Mãos{{else}}{{#if data.propriedades.leve}}Leve{{else}}Uma Mão{{/if}}{{/if}}</label>{{/if}}
		</footer>
		{{/if}}
	</div>
	<aside style="text-align: right; flex: 0 101px;">
		{{#if data.ativacao.custo}}
		<h2 class="custo">{{data.ativacao.custo}} PM</h2>
		{{/if}}
	</aside>
</header>
