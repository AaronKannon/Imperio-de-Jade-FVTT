<form class="{{cssClass}}" autocomplete="off">
	{{!-- Item Sheet Header --}}
    {{> "systems/imperiodejade/templates/item/parts/item-header.hbs"}}
	
	{{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">Descrição</a>
        <a class="item" data-tab="details">Detalhes</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
		{{!-- Description Tab --}}
        {{> "systems/imperiodejade/templates/item/parts/item-description.hbs"}}
		
		<div class="tab details" data-group="primary" data-tab="details">
			<div class="form-group">
                    <label>Chacra</label>
                    <select class="selectatr" name="data.tipoChacra" value={{data.tipoChacra}}>
                        {{#select data.tipoChacra}}
						{{#each config.tipoChacra as |name tipoChacra|}}
                        <option value="{{tipoChacra}}">{{name}}</option>
						{{/each}}
                        {{/select}}
                    </select>
			</div>
            <div class="form-group">
				<label>Grau</label>
				<select class="selectatr" name="data.grau" value={{data.grau}}>
					{{#select data.grau}}
					{{#each config.grauJutsu as |name nivel|}}
					<option value="{{nivel}}">{{name}}</option>
					{{/each}}
					{{/select}}
				</select>
			</div>
            <div class="form-group stacked">
				<label>Descritores</label>
				{{#each config.jutsuDescritores as |name desc|}}
                <label class="checkbox">
                    <input type="checkbox" name="data.descritores.{{desc}}" value="{{name}}" {{checked (lookup ../data.descritores desc)}} data-dtype="Boolean"/> {{ name }}
                </label>
                {{/each}}
            </div>
			
			<hr>
			
			<div class="form-group">
				<label>Rolagem</label>
				<div class="form-fields">
				<input type="text" name="data.efeito" value="{{data.efeito}}" data-dtype="String" placeholder="Ex: 6d6+6" />
				</div>
			</div>
			
			<hr>
			<h3>Ativação</h3>
			{{> "systems/imperiodejade/templates/item/parts/item-ativacao.hbs"}}
			{{> "systems/imperiodejade/templates/item/parts/item-resistencia.hbs"}}
			<hr>
			<div class="form-group">
				<label for="chatFlavor">ChatFlavor</label>
				<textarea name="data.chatFlavor" contenteditable="true">{{data.chatFlavor}}</textarea>
			</div>
		</div>
    </section>
</form>
