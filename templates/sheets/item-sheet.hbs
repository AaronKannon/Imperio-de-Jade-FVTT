<form class="{{cssClass}}" autocomplete="off">
	{{!-- Item Sheet Header --}}
    {{> "systems/imperiodejade/templates/item/parts/item-header.hbs"}}
	
	{{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize 'IDJ.tabDescricao' }}</a>
        {{#if (eq item.type "consumivel")}}<a class="item" data-tab="details">{{ localize 'IDJ.tabDetalhes' }}</a>{{/if}}
        <!-- <a class="item" data-tab="effects">{{ localize "DND5E.Effects" }}</a> -->
    </nav>

	{{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/imperiodejade/templates/item/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        {{#if (eq item.type "consumivel")}}
		<div class="tab details" data-group="primary" data-tab="details">
			{{> "systems/imperiodejade/templates/item/parts/item-rolagem.hbs"}}
		</div>
		{{/if}}
		<hr>
    </section>
    {{!-- Sheet Body --}}
    </section>
</form>
