<form class="{{cssClass}}" autocomplete="off">
	{{!-- Item Sheet Header --}}
    {{> "systems/imperiodejade/templates/item/parts/item-header.hbs"}}
	
	{{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">Descrição</a>
        {{#if (eq item.type "consumivel")}}<a class="item" data-tab="details">Detalhes</a>{{/if}}
        <!-- <a class="item" data-tab="effects">{{ localize "DND5E.Effects" }}</a> -->
    </nav>

	{{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/imperiodejade/templates/item/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        {{#if (eq item.type "consumivel")}}
		<div class="tab details" data-group="primary" data-tab="details">
			<div class="form-group">
				<label>Rolagem</label>
				<input type="text" name="data.efeito" value="{{data.efeito}}" data-dtype="String"/>
			</div>
			
			<hr>
			<h3>Ativação</h3>
			{{> "systems/imperiodejade/templates/item/parts/item-ativacao.hbs"}}
			{{> "systems/imperiodejade/templates/item/parts/item-resistencia.hbs"}}
			<hr>
			{{> "systems/imperiodejade/templates/item/parts/item-chatbox.hbs"}}
		</div>
		{{/if}}
		<hr>
    </section>
    {{!-- Sheet Body --}}
    </section>
</form>
