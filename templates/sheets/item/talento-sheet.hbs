<form class="{{cssClass}}" autocomplete="off">
    {{!-- Item Sheet Header --}}
    {{> "systems/imperiodejade/templates/sheets/item/parts/item-header.hbs"}}
	
	{{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize 'IDJ.tabDescricao' }}</a>
        <a class="item" data-tab="details">{{ localize 'IDJ.tabDetalhes' }}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
		{{!-- Description Tab --}}
        {{> "systems/imperiodejade/templates/sheets/item/parts/item-description.hbs"}}
		
		<div class="tab details" data-group="primary" data-tab="details">
			<div class="form-group">
				<label>{{ localize 'IDJ.detalhes.tipo' }}</label>
				<div class="form-fields">
					<select name="data.tipo">
						{{#select data.tipo}}
						{{#each config.tipoTalento as |name tipo|}}
						<option value="{{tipo}}">{{name}}</option>
						{{/each}}
						{{/select}}
					</select>
					<input type="text" title="{{ localize 'IDJ.talento.subtipo' }}" name="data.subtipo" value="{{data.subtipo}}" data-dtype="String" />
				</div>
			</div>
			{{> "systems/imperiodejade/templates/sheets/item/parts/item-rolagem.hbs"}}
		</div>
    </section>
</form>
