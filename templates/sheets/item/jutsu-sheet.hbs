<form class="{{cssClass}}" autocomplete="off">
	{{!-- Item Sheet Header --}}
    {{> "systems/imperiodejade/templates/sheets/item/parts/item-header.hbs"}}
	
	{{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize 'IDJ.tabDescricao' }}</a>
        <a class="item" data-tab="details">{{ localize 'IDJ.tabDetalhes' }}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
		{{!-- Description Tab --}}
        {{> "systems/imperiodejade/templates/sheets/item/parts/item-description.hbs"}}
		
		<div class="tab details" data-group="primary" data-tab="details">
			<div class="form-group">
                    <label>{{ localize 'IDJ.jutsu.chacra' }}</label>
                    <select class="selectatr" name="data.tipoChacra" value={{data.tipoChacra}}>
                        {{#select data.tipoChacra}}
						{{#each config.tipoChacra as |name tipoChacra|}}
                        <option value="{{tipoChacra}}">{{name}}</option>
						{{/each}}
                        {{/select}}
                    </select>
			</div>
            <div class="form-group">
				<label>{{ localize 'IDJ.jutsu.grau' }}</label>
				<select class="selectatr" name="data.grau" value={{data.grau}}>
					{{#select data.grau}}
					{{#each config.grauJutsu as |name nivel|}}
					<option value="{{nivel}}">{{name}}</option>
					{{/each}}
					{{/select}}
				</select>
			</div>
            <div class="form-group stacked">
				<label>{{ localize 'IDJ.jutsu.descritores' }}</label>
				{{#each config.jutsuDescritores as |name desc|}}
                <label class="checkbox">
                    <input type="checkbox" name="data.descritores.{{desc}}" value="{{name}}" {{checked (lookup ../data.descritores desc)}} data-dtype="Boolean"/> {{ name }}
                </label>
                {{/each}}
            </div>
			
			<hr>
			
			{{> "systems/imperiodejade/templates/sheets/item/parts/item-rolagem.hbs"}}
		</div>
    </section>
</form>
