<form class="{{cssClass}}" autocomplete="off">

    {{!-- Item Sheet Header --}}
	{{> "systems/imperiodejade/templates/item/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <!-- <a class="item active" data-tab="description">Descrição</a> -->
        <a class="item active" data-tab="details">Detalhes</a>
        {{#if isGM}}<a class="item active" data-tab="config">Configuração (GM)</a>{{/if}}
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}


        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Class Levels --}}
            <div class="form-group">
                <label>Níveis de Classe</label>
                <div class="form-fields">
                    <input type="number" min="1" name="data.niveis" value="{{data.niveis}}" data-dtype="Number"/>
                </div>
            </div>

            {{!-- Class Hit Dice --}}
            <div class="form-group">
                <label>Pontos de Vida por Nível</label>
                <div class="form-fields">
                    <select name="data.pvPorNivel">
                        {{#select data.pvPorNivel}}
                        {{#each config.pvPorNivel}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </div>
            </div>
			
			<div class="form-group">
                <label>Pontos de Mana por Nível</label>
                <div class="form-fields">
                    <select name="data.pmPorNivel">
                        {{#select data.pmPorNivel}}
                        {{#each config.pmPorNivel}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </div>
            </div>

            <!-- <div class="form-group"> -->
                <!-- <label>Conjurador</label> -->
                <!-- <div class="form-fields"> -->
                    <!-- <select name="data.spellcasting"> -->
                        <!-- {{#select data.spellcasting}} -->
                            <!-- {{#each config.spellProgression}} -->
                                <!-- <option value="{{@key}}">{{localize this}}</option> -->
                            <!-- {{/each}} -->
                        <!-- {{/select}} -->
                    <!-- </select> -->
                <!-- </div> -->
            <!-- </div> -->

            {{!-- Level 1 skills --}}
			<div class="form-group">
                <label>Perícias de Classe</label>
                <div class="form-fields">
					<input type="text" name="data.pericias.inatas" value="{{data.pericias.inatas}}" data-dtype="String" />
                </div>
            </div>
			
            <div class="form-group">
                <label>Número de Perícias de Classe Adicionais</label>
                <div class="form-fields">
                    <input type="text" name="data.pericias.numero" value="{{data.pericias.numero}}" data-dtype="Number" />
                </div>
            </div>

            <div class="form-group">
                <label>
                    Perícias Escolhidas
                    {{#if editable}}
                    <a class="trait-selector class-skills" data-target="data.pericias" data-options="pericias">
                        <i class="fas fa-edit"></i></a>
                    {{/if}}
                </label>
                <div class="form-fields">
                    <ul class="traits-list">
                        {{#each data.pericias.value}}
                            <li class="tag {{this}}">{{lookup ../config.pericias this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
		
		 <div class="tab config" data-group="primary" data-tab="config">
			{{#if isGM}}
			<div class="form-group stacked weapon-properties">
                <label>Perícias Adicionais</label>
                {{#each config.pericias as |name prop|}}
                <label class="checkbox">
                    <input type="checkbox" name="data.pericias.escolhas.{{prop}}" value="{{name}}" {{checked (lookup ../data.pericias.escolhas prop)}} data-dtype="Boolean" /> {{ name }}
                </label>
                {{/each}}
            </div>
			{{/if}}
		</div>
    </section>
</form>